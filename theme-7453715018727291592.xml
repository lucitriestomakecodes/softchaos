body {
  background: #081120;
  color: #d0d0d0;
  font-family: 'Fira Code', monospace;
  margin: 0;
  padding: 0;
}

a.neon-link {
  color: #0fa;
  text-decoration: none;
  transition: color 0.3s ease, text-shadow 0.3s ease;
}

a.neon-link:hover {
  color: #a0f;
  text-shadow: 0 0 8px #a0f;
}

.sidebar {
  background: #0f131f;
  border-radius: 6px;
  box-shadow: 0 0 8px rgba(0, 200, 150, 0.3);
  padding: 20px;
  width: 240px;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
}

.content {
  margin-left: 260px;
  padding: 20px;
}

h1, h2, h3 {
  color: #0fa;
  font-family: 'Fira Code', monospace;
  margin-top: 0;
}

.separator {
  border-bottom: 1px solid #0fa;
  margin: 20px 0;
  box-shadow: 0 0 4px #0fa;
}

.box-neon {
  background: #0f131f;
  box-shadow: 0 0 12px #a0f;
  border-radius: 6px;
  padding: 15px;
  margin-bottom: 24px;
}

audio {
  width: 100%;
  margin-top: 10px;
  outline: none;
}
