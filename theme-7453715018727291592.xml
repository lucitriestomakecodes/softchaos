/* Základní nastavení fontů a pozadí */
body {
  margin: 0;
  background-color: #081120;
  color: #d0d0d0;
  font-family: 'Fira Code', monospace;
  display: flex;
  height: 100vh;
}

/* Kontejner hlavního rozložení */
.container {
  display: flex;
  width: 100%;
}

/* Sidebar */
.sidebar {
  background: #0f131f;
  padding: 20px;
  width: 250px;
  box-shadow: 0 0 8px rgba(0, 200, 150, 0.3);
  border-radius: 6px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* Neonový odkaz */
.neon-link {
  color: #0fa;
  text-decoration: none;
  transition: color 0.3s ease, text-shadow 0.3s ease;
}

.neon-link:hover {
  color: #a0f;
  text-shadow: 0 0 8px #a0f;
}

/* Navigace */
nav ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

nav ul li {
  margin-bottom: 12px;
}

nav ul li a {
  font-weight: bold;
  font-size: 1.1em;
}

/* Obsah stránky */
.content {
  flex-grow: 1;
  padding: 40px;
}

/* Nadpisy */
h1, h2 {
  color: #0fa;
  margin: 0;
  font-weight: 700;
}

/* Audio přehrávač */
audio {
  width: 100%;
  outline: none;
  background-color: #131926;
  border-radius: 6px;
  box-shadow: 0 0 8px rgba(160, 15, 255, 0.2);
}
