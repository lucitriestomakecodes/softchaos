body {
  margin: 0;
  font-family: 'Courier New', monospace;
  background-color: #000;
  color: #39ff14;
}

a {
  color: #39ff14;
  text-decoration: none;
  transition: color 0.3s;
}

a:hover {
  color: #b000f0;
}

.container {
  display: flex;
  min-height: 100vh;
}

.sidebar {
  width: 250px;
  background-color: #111;
  padding: 20px;
  box-shadow: 2px 0 5px rgba(0,0,0,0.5);
}

.sidebar h1 a {
  color: #39ff14;
}

.sidebar ul {
  list-style: none;
  padding: 0;
}

.sidebar li {
  margin: 10px 0;
}

.content {
  flex: 1;
  padding: 40px;
}
